[alias]
	a = add
	c = commit -m
	ci = commit
	co = checkout
	d = diff | mate
	l = log --graph --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %Cblue<%an>%Creset %C(yellow)%d%Creset' --abbrev-commit --date=relative
	pl = pull
	ps = push
	st = status --short --branch
	stl = status
